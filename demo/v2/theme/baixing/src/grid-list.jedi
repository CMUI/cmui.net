:import _skeleton

	#base::after
		- $data->pageId = 'grid-list'
		- $data->pageTitle = 'Grid List'

	#main
		section.summary
			h2 "概述"
			div.intro
				p "网格列表是以行列式呈现的列表。"
				p
					"网格列表元素必须具有 "
					code ".cmGridList"
					" 这个基础类名。"
				pre > code
					'ul.cmGridList
						    li > a
						    li > a
						    li > a
			ul.cmGridList
				li > a @href="#"
					"列表项"
				li > a @href="#"
					"列表项"
				li > a @href="#"
					"列表项"
				li > a @href="#"
					"列表项"
