		section
			h2 "被选中的列表项"
			div.intro
				p
					"给列表项（"
					code "<li>"
					"）元素添加 "
					code ".selected"
					" 类名，即可将其设置为被选中的状态。"
				pre > code
					'ul.cmGridList
						    li > a @href="#"
						    li.selected > a @href="#"
						    li > a @href="#"
						    li > a @href="#"
			ul.cmGridList
				li > a @href="#"
					"列表项"
